<?xml version="1.0" encoding="utf-8"?>
<Template>
  <Name>Blog Page</Name>
  <Alias>BlogPage</Alias>
  <Design><![CDATA[@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
	@{
	IPublishedContent BlogRoot = Model.Content.AncestorOrSelf("BlogListing");
	@*@section HeaderTags{*@
	@RenderSection("HeaderTags", false)
	@*}*@
	Layout = "MasterPage.cshtml";
	<main class="col-md-9">
		@RenderBody()

	</main>

	<aside class="col-md-3">
		<form action="@BlogRoot.Url" method="get">
			<div class="input-group">
				<input name="search" type="search" class="form-control" placeholder="Search @BlogRoot.Name" value="@Request.QueryString["search"]">
				<span class="input-group-btn">
					<button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
				</span>
			</div>
		</form>
		<section>
			@Html.CachedPartial("Blog/ListAllAuthors", BlogRoot, 300) @*See /Views/Partials/Blog/ListAllAuthors.cshtml*@
		</section>
		<section>

			@Html.CachedPartial("Blog/ListAllCategories", BlogRoot, 300) @*See /Views/Partials/Blog/ListAllCategories.cshtml*@
		</section>
		<section>

			@Html.CachedPartial("Blog/ListAllTags", BlogRoot, 300) @*See /Views/Partials/Blog/ListAllTags.cshtml*@
		</section>
	</aside>
}]]></Design>
</Template>