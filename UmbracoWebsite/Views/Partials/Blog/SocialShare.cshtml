@{
    Layout = null;
	
}



<ul class="share-buttons">
	<li><a href="https://www.facebook.com/sharer/sharer.php?u=@Model.FullUrl&t=@Model.Title" title="Share on Facebook" target="_blank"><img src="~/App_Plugins/BlogMomentum/images/social/Facebook.svg"></a></li>
	<li><a href="https://twitter.com/intent/tweet?source=@Model.FullUrl&text=@Model.Title:%20@Model.FullUrl&via=@Model.TwitterUsername" target="_blank" title="Tweet"><img src="~/App_Plugins/BlogMomentum/images/social/Twitter.svg"></a></li>
	<li><a href="https://plus.google.com/share?url=@Model.FullUrl" target="_blank" title="Share on Google+"><img src="~/App_Plugins/BlogMomentum/images/social/Google.svg"></a></li>
	<li><a href="http://www.tumblr.com/share?v=3&u=@Model.FullUrl&t=@Model.Title&s=" target="_blank" title="Post to Tumblr"><img src="~/App_Plugins/BlogMomentum/images/social/Tumblr.svg"></a></li>
	<li><a href="http://pinterest.com/pin/create/button/?url=@Model.FullUrl&media=@Model.MainImage&description=@Model.ShareDescription" target="_blank" title="Pin it"><img src="~/App_Plugins/BlogMomentum/images/social/Pinterest.svg"></a></li>
	<li><a href="https://getpocket.com/save?url=@Model.FullUrl&title=@Model.Title" target="_blank" title="Add to Pocket"><img src="~/App_Plugins/BlogMomentum/images/social/Pocket.svg"></a></li>
	<li><a href="http://www.reddit.com/submit?url=@Model.FullUrl&title=@Model.Title" target="_blank" title="Submit to Reddit"><img src="~/App_Plugins/BlogMomentum/images/social/Reddit.svg"></a></li>
	<li><a href="http://www.linkedin.com/shareArticle?mini=true&url=@Model.FullUrl&title=@Model.Title&summary=@Model.ShareDescription&source=@Model.FullUrl" target="_blank" title="Share on LinkedIn"><img src="~/App_Plugins/BlogMomentum/images/social/LinkedIn.svg"></a></li>
	<li><a href="http://wordpress.com/press-this.php?u=@Model.FullUrl&t=@Model.Title&s=@Model.ShareDescription&i=@Model.MainImage" target="_blank" title="Publish on WordPress"><img src="~/App_Plugins/BlogMomentum/images/social/Wordpress.svg"></a></li>
	<li><a href="https://pinboard.in/popup_login/?url=@Model.FullUrl&title=@Model.Title&description=@Model.ShareDescription" target="_blank" title="Save to Pinboard"><img src="~/App_Plugins/BlogMomentum/images/social/Pinboard.svg"></a></li>
	<li><a href="mailto:?subject=@Model.Title&body=@Model.ShareDescription:%20@(Model.FullUrl)" target="_blank" title="Email"><img src="~/App_Plugins/BlogMomentum/images/social/Email.svg"></a></li>
</ul>

<style>
ul.share-buttons{
  list-style: none;
  padding: 0;
}

ul.share-buttons li{
  display: inline;
}

ul.share-buttons img{
  width: 32px;
}
</style>