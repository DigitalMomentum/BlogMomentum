@{
	Layout = null;
	string ImageUrl = (Model.MainImage != null) ? Request.Url.Scheme + "://" + Request.Url.Host.ToLower() + Model.MainImage : null;
}
@* OPEN GRAPH - http://ogp.me/#types *@

<meta property="og:title" content="@Model.Title" />
<meta property="og:type" content="article" />

<meta property="article:published_time" content="@Model.EntryDate.ToString("yyyy-MM-dd")" />
<meta property="article:modified_time" content="@Model.Content.UpdateDate.ToString("yyyy-MM-dd")" />
<meta property="article:tag" content="@Model.Tags" />
<meta property="og:description" content="@Model.ShareDescription" />
<meta property="og:url" content="@Model.FullUrl" />
@if (ImageUrl != null) {
	<meta property="og:image" content="@ImageUrl" />
}


